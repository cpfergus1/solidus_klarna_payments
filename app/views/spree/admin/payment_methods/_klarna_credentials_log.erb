<% if @payment_method.type == "Spree:PaymentMethod::KlarnaCredit" %>
  <% if @payment_method.persisted? && (@payment_method.preferred_api_key.blank? || @payment_method.preferred_api_secret.blank?)
      missing_preferece = [
          (I18n.t('api_key') if @payment_method.preferred_api_key.blank?),
          (I18n.t('api_secret') if @payment_method.preferred_api_secret.blank?),
        ].compact.to_sentence(locale: I18n.locale)
    %>
  <div class="errorExplanation align-center">
    <span class="fa fa-exclamation-circle"></span>
    <%= I18n.t('klarna.specify_credentials', missing_preferece: missing_preferece) %>
  </div>
<% end %>
<% end %>
